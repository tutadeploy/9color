FROM php:7.3-apache

# 安装系统依赖
RUN apt-get update && apt-get install -y \
    libpng-dev \
    libjpeg-dev \
    libfreetype6-dev \
    libonig-dev \
    libxml2-dev \
    zip \
    unzip \
    git \
    curl \
    libzip-dev \
    && docker-php-ext-configure gd --with-freetype-dir=/usr/include/ --with-jpeg-dir=/usr/include/ \
    && docker-php-ext-install -j$(nproc) gd \
    && docker-php-ext-install pdo_mysql \
    && docker-php-ext-install mysqli \
    && docker-php-ext-install zip \
    && docker-php-ext-install mbstring \
    && docker-php-ext-install xml \
    && docker-php-ext-install json

# 安装Composer
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

# 安装Xdebug（开发调试）
RUN pecl install xdebug-2.9.8 \
    && docker-php-ext-enable xdebug

# 配置Apache
RUN a2enmod rewrite
COPY ./dev-docker/docker-config/apache-dev.conf /etc/apache2/sites-available/000-default.conf

# 配置PHP开发环境
COPY ./dev-docker/docker-config/php-dev.ini /usr/local/etc/php/conf.d/php-dev.ini

# 设置工作目录
WORKDIR /var/www/html

# 修改权限
RUN chown -R www-data:www-data /var/www/html \
    && chmod -R 755 /var/www/html

# 开发模式：支持PHP内置服务器
EXPOSE 80 8080

# 启动脚本
COPY ./dev-docker/docker-config/start-dev.sh /usr/local/bin/start-dev.sh
RUN chmod +x /usr/local/bin/start-dev.sh

CMD ["/usr/local/bin/start-dev.sh"] 